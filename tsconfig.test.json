{
  "compilerOptions": {
    "lib": ["es2017"],
    "module": "commonjs",
    "target": "es2017",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "removeComments": false,
    "strictPropertyInitialization": false,
  },
  "include": [
    "src/**/*.test.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}